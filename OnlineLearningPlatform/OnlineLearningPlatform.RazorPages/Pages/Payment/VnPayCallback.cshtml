@page
@model OnlineLearningPlatform.RazorPages.Pages.Payment.VnPayCallbackModel
@{
    ViewData["Title"] = "Kết quả thanh toán";
    Layout = "_Layout"; // Use standard layout
}

<style>
    :root {
        --apple-bg: #fbfbfd;
        --apple-bg-end: #e5e5ea;
        --apple-text: #1d1d1f;
        --apple-text-muted: #86868b;
        --apple-blue: #0071e3;
        --apple-radius: 28px;
    }
    body {
        background: linear-gradient(135deg, var(--apple-bg) 0%, var(--apple-bg-end) 100%);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        color: var(--apple-text);
        -webkit-font-smoothing: antialiased;
        min-height: 100vh;
    }
    .result-container {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }
    .result-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: var(--apple-radius);
        padding: 4rem 3rem;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
        max-width: 540px;
        width: 100%;
        text-align: center;
        transition: transform 0.3s ease;
    }
    .result-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
    }
    .icon-wrapper {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        font-size: 3.5rem;
    }
    .icon-success {
        background-color: rgba(52, 199, 89, 0.1);
        color: #34c759;
    }
    .icon-danger {
        background-color: rgba(255, 59, 48, 0.1);
        color: #ff3b30;
    }
    .result-title {
        font-weight: 700;
        font-size: 2rem;
        letter-spacing: -0.02em;
        margin-bottom: 1rem;
    }
    .result-desc {
        color: var(--apple-text-muted);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }
    .detail-box {
        background-color: #f2f2f7;
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 2.5rem;
        text-align: left;
    }
    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.8rem;
    }
    .detail-row:last-child {
        margin-bottom: 0;
    }
    .detail-label {
        color: var(--apple-text-muted);
        font-size: 0.95rem;
    }
    .detail-value {
        font-weight: 600;
        color: var(--apple-text);
        font-size: 0.95rem;
    }
    .action-btn {
        display: inline-block;
        width: 100%;
        padding: 1rem 1.5rem;
        border-radius: 30px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
    }
    .btn-primary-apple {
        background-color: var(--apple-blue);
        color: #fff;
    }
    .btn-primary-apple:hover {
        background-color: #0077ed;
        transform: scale(1.02);
        color: #fff;
    }
    .btn-outline-apple {
        background-color: transparent;
        color: var(--apple-text);
        border: 2px solid rgba(0,0,0,0.1);
    }
    .btn-outline-apple:hover {
        background-color: rgba(0,0,0,0.05);
        color: var(--apple-text);
    }
</style>

<div class="result-container">
    <div class="result-card">
        <div class="icon-wrapper icon-danger">
            <i class="bi bi-x-lg"></i>
        </div>
        <h2 class="result-title text-danger">Thanh toán thất bại</h2>
        <p class="result-desc">Rất tiếc. Giao dịch của bạn đã bị hủy hoặc không thể hoàn tất. @Model.ErrorMessage</p>
        
        <div class="detail-box">
            <div class="detail-row">
                <span class="detail-label">Trạng thái</span>
                <span class="detail-value text-danger">Thất bại / Đã hủy</span>
            </div>
        </div>

        <a href="/Student/Dashboard" class="action-btn btn-outline-apple mt-3">Về Bảng điều khiển</a>
    </div>
</div>
