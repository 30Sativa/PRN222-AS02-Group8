<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — EduLearn</title>
    <meta name="description" content="Nền tảng học trực tuyến EduLearn" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- NAV BAR — glassmorphism, 48px height -->
    <nav class="nav-bar">
        <div class="container">
            <a asp-area="" asp-page="/Auth/Index" class="nav-brand">EduLearn</a>

            <ul class="nav-links">
                @if (User.IsInRole("Admin"))
                {
                    <li><a asp-area="Admin" asp-page="/Dashboard">Dashboard</a></li>
                    <li><a asp-area="Admin" asp-page="/Users/Index">Người dùng</a></li>
                }
                @if (User.IsInRole("Teacher"))
                {
                    <li><a asp-area="Teacher" asp-page="/Dashboard">Dashboard</a></li>
                    <li><a asp-area="Teacher" asp-page="/Profile">Hồ sơ</a></li>
                }
                @if (User.IsInRole("Student"))
                {
                    <li><a asp-area="Student" asp-page="/Dashboard">Dashboard</a></li>
                    <li><a asp-area="Student" asp-page="/MyLearning">Khóa học của tôi</a></li>
                    <li><a asp-area="Student" asp-page="/Profile">Hồ sơ</a></li>
                }
            </ul>

            <div class="nav-user">
                <div class="nav-avatar">
                    @(User.Identity?.Name?[0].ToString().ToUpper() ?? "U")
                </div>
                <span class="nav-user-name">@User.Identity?.Name</span>
                <form method="post" asp-page="/Auth/Logout">
                    <button type="submit" class="btn-nav-logout">Đăng xuất</button>
                </form>
            </div>
        </div>
    </nav>
}

<!-- CONTENT -->
<div class="@(User.Identity?.IsAuthenticated == true ? "main-content" : "")">
    <div class="@(User.Identity?.IsAuthenticated == true ? "container" : "")">
        @RenderBody()
    </div>
</div>

<!-- FOOTER -->
@if (User.Identity?.IsAuthenticated == true)
{
    <footer class="site-footer">
        <div class="container">
            <span class="footer-copy">Copyright &copy; 2026 EduLearn</span>
            <div class="footer-links">
                <a href="#">Trợ giúp</a>
                <a href="#">Điều khoản</a>
            </div>
        </div>
    </footer>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>