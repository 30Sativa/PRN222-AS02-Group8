@page
@model OnlineLearningPlatform.RazorPages.Pages.Auth.RegisterConfirmationModel
@{
    ViewData["Title"] = "Xác nhận email";
    Layout = "_Layout";
}

<div class="auth-screen">
    <div class="auth-card fade-up">
        <div class="auth-logo">
            <div class="logo-mark" style="background: var(--color-blue);">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                    <polyline points="22,6 12,13 2,6"/>
                </svg>
            </div>
            <h1>Kiểm tra email của bạn</h1>
            <p>Tài khoản đã được tạo thành công</p>
        </div>

        <div class="alert alert-info mb-4" role="alert">
            <div style="display: flex; align-items: flex-start; gap: var(--space-3);">
                <i class="bi bi-info-circle-fill" style="font-size: 1.2rem; flex-shrink: 0;"></i>
                <div>
                    <strong style="display: block; margin-bottom: var(--space-1);">Tài khoản đã được tạo</strong>
                    <span>Tài khoản của bạn đã được tạo, nhưng <strong>chưa được kích hoạt</strong>.</span>
                </div>
            </div>
        </div>

        <div style="background: var(--color-surface-2); border-radius: var(--radius); padding: var(--space-5); margin-bottom: var(--space-5);">
            <h6 style="font-size: var(--text-sm); font-weight: 600; color: var(--color-label-1); margin-bottom: var(--space-3); display: flex; align-items: center; gap: var(--space-2);">
                <i class="bi bi-envelope"></i>
                <span>Các bước tiếp theo:</span>
            </h6>
            <ol style="margin: 0; padding-left: var(--space-5); color: var(--color-label-2); font-size: var(--text-sm); line-height: 1.8;">
                <li style="margin-bottom: var(--space-2);">
                    Kiểm tra hộp thư đến tại <strong style="color: var(--color-blue);">@Model.Email</strong>
                </li>
                <li style="margin-bottom: var(--space-2);">
                    Nhấp vào liên kết xác nhận trong email
                </li>
                <li>
                    Quay lại đây để đăng nhập sau khi xác nhận
                </li>
            </ol>
        </div>

        <div class="alert alert-warning mb-4" role="alert">
            <div style="display: flex; align-items: flex-start; gap: var(--space-3);">
                <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.2rem; flex-shrink: 0;"></i>
                <div>
                    <strong>Quan trọng:</strong> Bạn không thể đăng nhập cho đến khi xác nhận địa chỉ email của mình.
                </div>
            </div>
        </div>

        <div class="auth-footer">
            <div class="mb-3">
                <a asp-page="/Auth/Login" class="btn btn-primary" style="width:100%; padding: 12px; font-size: 15px;">
                    <i class="bi bi-box-arrow-in-right"></i> Đi đến đăng nhập
                </a>
            </div>
            <div style="font-size: var(--text-xs); color: var(--color-label-2);">
                Không nhận được email? Kiểm tra thư mục spam hoặc 
                <a asp-page="/Auth/Register">thử đăng ký lại</a>.
            </div>
        </div>
    </div>
</div>