@page
@model OnlineLearningPlatform.RazorPages.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<!-- Trang Login dùng layout Auth riêng, full screen gradient -->
<div class="auth-wrapper">
    <div class="auth-card fade-in">
        <!-- Logo -->
        <div class="auth-logo">
            <div class="logo-icon">📚</div>
            <h1>Chào mừng trở lại</h1>
            <p>Đăng nhập vào EduLearn để tiếp tục học tập</p>
        </div>

        <!-- Hiển thị lỗi nếu có -->
        <div asp-validation-summary="All" class="olp-alert olp-alert-danger" style="display:@(ViewData.ModelState.IsValid ? "none" : "flex")"></div>

        <!-- Form Login -->
        <form method="post">
            <div class="form-group">
                <label asp-for="LoginRequest.Email">📧 Email</label>
                <input asp-for="LoginRequest.Email" class="olp-form-control" placeholder="Nhập email của bạn" />
                <span asp-validation-for="LoginRequest.Email" class="text-danger" style="font-size:.8rem;"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginRequest.Password">🔒 Mật khẩu</label>
                <input asp-for="LoginRequest.Password" type="password" class="olp-form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="LoginRequest.Password" class="text-danger" style="font-size:.8rem;"></span>
            </div>
            <button type="submit" class="btn-auth">Đăng nhập →</button>
        </form>

        <!-- Link qua Register -->
        <div class="auth-footer">
            Chưa có tài khoản?
            <a asp-page="/Auth/Register">Đăng ký ngay</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
