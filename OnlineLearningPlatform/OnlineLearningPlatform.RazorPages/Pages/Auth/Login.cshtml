@page
@model OnlineLearningPlatform.RazorPages.Pages.Auth.LoginModel
@{
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center mb-4">Login</h2>

        @if (ViewData["EmailConfirmedMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                <span>@ViewData["EmailConfirmedMessage"]</span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

            <form method="post">
                <div class="mb-3">
                    <label asp-for="LoginRequest.Email" class="form-label">Email</label>
                    <input asp-for="LoginRequest.Email" class="form-control" />
                    <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LoginRequest.Password" class="form-label">Password</label>
                    <input asp-for="LoginRequest.Password" type="password" class="form-control" />
                    <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <hr class="my-4">

            <form method="post" asp-page="/Auth/ExternalLogin">
                <button type="submit" name="provider" value="Google" class="btn btn-outline-danger w-100">
                    <i class="bi bi-google"></i> Login with Google
                </button>
            </form>

            <div class="mt-3 text-center">
                <p class="mb-2">
                    Don't have an account? 
                    <a asp-page="/Auth/Register">Register here</a>
                </p>
                <p class="mb-0">
                    <a asp-page="/Auth/ForgotPassword">Forgot Password?</a>
                </p>
            </div>
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
