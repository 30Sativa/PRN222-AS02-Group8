@page
@model OnlineLearningPlatform.RazorPages.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";
}

<!-- Trang Register full screen gradient giống Login -->
<div class="auth-wrapper">
    <div class="auth-card fade-in">
        <!-- Logo -->
        <div class="auth-logo">
            <div class="logo-icon">🎓</div>
            <h1>Tạo tài khoản</h1>
            <p>Tham gia EduLearn để bắt đầu hành trình học tập</p>
        </div>

        <!-- Hiển thị lỗi nếu có -->
        <div asp-validation-summary="All" class="olp-alert olp-alert-danger" style="display:@(ViewData.ModelState.IsValid ? "none" : "flex")"></div>

        <!-- Form Register -->
        <form method="post">
            <div class="form-group">
                <label asp-for="RegisterRequest.Email">📧 Email</label>
                <input asp-for="RegisterRequest.Email" class="olp-form-control" placeholder="Nhập email" />
                <span asp-validation-for="RegisterRequest.Email" class="text-danger" style="font-size:.8rem;"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterRequest.FullName">👤 Họ và tên</label>
                <input asp-for="RegisterRequest.FullName" class="olp-form-control" placeholder="Nhập họ tên đầy đủ" />
                <span asp-validation-for="RegisterRequest.FullName" class="text-danger" style="font-size:.8rem;"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterRequest.Password">🔒 Mật khẩu</label>
                <input asp-for="RegisterRequest.Password" type="password" class="olp-form-control" placeholder="Tối thiểu 6 ký tự" />
                <span asp-validation-for="RegisterRequest.Password" class="text-danger" style="font-size:.8rem;"></span>
            </div>
            <button type="submit" class="btn-auth">Đăng ký →</button>
        </form>

        <!-- Link qua Login -->
        <div class="auth-footer">
            Đã có tài khoản?
            <a asp-page="/Auth/Login">Đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}