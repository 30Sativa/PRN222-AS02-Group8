@page
@model OnlineLearningPlatform.RazorPages.Areas.Teacher.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">My Courses</h2>
        <p class="text-muted mb-0">Select a course to manage sections and lessons.</p>
    </div>
    <a class="btn btn-primary" asp-area="Teacher" asp-page="/Courses/Create">Create Course</a>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-10">
                <label asp-for="SearchTitle" class="form-label">Search by Title</label>
                <input asp-for="SearchTitle" class="form-control" placeholder="Enter course title" />
            </div>
            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
                <a asp-page="/Courses/Index" asp-area="Teacher" class="btn btn-outline-secondary w-100">Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end" style="width: 380px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="courseTableBody">
                    @if (Model.Courses.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No courses found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.Title</td>
                                <td>@course.Price.ToString("N0")</td>
                                <td class="course-status" data-course-id="@course.CourseId">@course.Status</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary me-2" asp-area="Teacher" asp-page="/Courses/Details" asp-route-id="@course.CourseId">Manage Content</a>
                                    <a class="btn btn-sm btn-outline-warning me-2" asp-area="Teacher" asp-page="/Courses/Edit" asp-route-id="@course.CourseId">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-area="Teacher" asp-page="/Courses/Delete" asp-route-id="@course.CourseId">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        setInterval(function () {
            fetch(window.location.pathname + '?handler=Statuses', { method: 'GET' })
                .then(response => response.ok ? response.json() : null)
                .then(data => {
                    if (!data || !Array.isArray(data)) return;

                    data.forEach(item => {
                        const statusCell = document.querySelector('.course-status[data-course-id="' + item.courseId + '"]');
                        if (statusCell) {
                            statusCell.textContent = item.status;
                        }
                    });
                })
                .catch(() => { });
        }, 5000);
    });
</script>
}
