<script src="~/lib/microsoft-signalr/signalr.min.js"></script>
<script>
(function () {
    // ==== SignalR: Teacher Courses realtime (thay th·∫ø polling) ====
    const connection = new signalR.HubConnectionBuilder()
        .withUrl('/hubs/data')
        .withAutomaticReconnect()
        .build();

    const LABELS = { Published: '‚úì Xu·∫•t b·∫£n', Pending: '‚è≥ Ch·ªù duy·ªát', Rejected: '‚úï T·ª´ ch·ªëi' };
    const CLASSES = { Published: 'ribbon-published', Pending: 'ribbon-pending', Rejected: 'ribbon-rejected' };

    function escHtml(str) {
        return String(str || '').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
    }

    function showToast(msg, type) {
        const toast = document.createElement('div');
        const cls = type === 'success' ? 'success' : type === 'danger' ? 'danger' : type === 'warning' ? 'warning' : 'info';
        toast.className = 'alert alert-' + cls;
        toast.style.cssText = 'position:fixed;bottom:20px;right:20px;z-index:9999;min-width:300px;animation:fadeUp .3s ease forwards;max-width:420px;';
        toast.textContent = msg;
        document.body.appendChild(toast);
        setTimeout(() => { toast.style.opacity='0'; toast.style.transition='opacity .3s ease'; setTimeout(()=>toast.remove(),300); }, 4000);
    }

    // ---- CourseStatusChanged: Admin approve/reject ‚Üí badge ƒë·ªïi m√†u ngay ----
    connection.on('CourseStatusChanged', function (data) {
        const badge = document.querySelector('[data-cid="' + data.courseId + '"]');
        if (!badge) return;
        const newClass = CLASSES[data.status] || 'ribbon-pending';
        badge.className = 'status-ribbon course-status-badge ' + newClass;
        badge.textContent = LABELS[data.status] || data.status;
        // Flash animation
        badge.style.transition = 'none';
        badge.style.transform = 'scale(1.15)';
        setTimeout(() => { badge.style.transition = 'transform .25s ease'; badge.style.transform = 'scale(1)'; }, 50);

        const label = data.status === 'Published' ? 'ƒë√£ ƒë∆∞·ª£c duy·ªát ‚úÖ' : 'b·ªã t·ª´ ch·ªëi ‚ùå';
        showToast('Kh√≥a h·ªçc ƒë√£ ' + label + '. Trang ƒë√£ ƒë∆∞·ª£c c·∫≠p nh·∫≠t.', data.status === 'Published' ? 'success' : 'danger');
    });

    // ---- CourseDeleted: card b·ªã x√≥a ngay ----
    connection.on('CourseDeleted', function (data) {
        const card = document.getElementById('card-' + data.courseId);
        if (!card) return;
        card.style.transition = 'opacity .35s ease, transform .35s ease';
        card.style.opacity = '0';
        card.style.transform = 'scale(0.9)';
        setTimeout(() => card.remove(), 350);
        showToast('üóëÔ∏è M·ªôt kh√≥a h·ªçc ƒë√£ b·ªã x√≥a.', 'warning');
    });

    // ---- CourseUpdated: c·∫≠p nh·∫≠t title v√† meta ----
    connection.on('CourseUpdated', function (data) {
        const card = document.getElementById('card-' + data.courseId);
        if (!card) return;
        const titleEl = card.querySelector('.course-card-title');
        if (titleEl && data.title) titleEl.textContent = data.title;
