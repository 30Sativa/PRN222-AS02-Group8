<style>
/* ‚îÄ‚îÄ Page header ‚îÄ‚îÄ */
.courses-head {
    display: flex; align-items: flex-start; justify-content: space-between;
    gap: var(--space-4); margin-bottom: var(--space-6); flex-wrap: wrap;
}
.courses-head-left h1 { margin-bottom: 4px; }
.courses-head-left p  { font-size: var(--text-sm); color: var(--color-label-2); }

/* ‚îÄ‚îÄ Search & filter bar ‚îÄ‚îÄ */
.courses-filter {
    display: flex; align-items: center; gap: var(--space-3);
    margin-bottom: var(--space-6); flex-wrap: wrap;
}
.courses-filter .search-wrap {
    flex: 1; min-width: 220px; max-width: 400px;
    display: flex; align-items: center;
    background: var(--color-surface); border: 1px solid var(--color-border);
    border-radius: var(--radius-full); padding: 0 var(--space-4);
    gap: var(--space-2); transition: border-color .2s, box-shadow .2s;
}
.courses-filter .search-wrap:focus-within {
    border-color: var(--color-blue);
    box-shadow: 0 0 0 3px rgba(0,113,227,.12);
}
.courses-filter .search-wrap svg { width: 14px; height: 14px; color: var(--color-label-3); flex-shrink: 0; }
.courses-filter .search-wrap input {
    border: none; background: transparent; font-family: inherit;
    font-size: var(--text-sm); color: var(--color-label-1);
    outline: none; padding: 9px 0; width: 100%;
}
.courses-filter .search-wrap input::placeholder { color: var(--color-label-3); }

.filter-pills { display: flex; gap: var(--space-2); flex-wrap: wrap; }
.filter-pill {
    padding: 6px 14px; border-radius: var(--radius-full);
    font-size: var(--text-xs); font-weight: 500; cursor: pointer;
    border: 1.5px solid var(--color-border); background: var(--color-surface);
    color: var(--color-label-2); transition: all .18s ease;
    text-decoration: none; display: inline-flex; align-items: center; gap: 5px;
}
.filter-pill:hover { border-color: var(--color-blue); color: var(--color-blue); opacity: 1; }
.filter-pill.active { background: var(--color-blue); border-color: var(--color-blue); color: #fff; }

/* ‚îÄ‚îÄ Course card grid ‚îÄ‚îÄ */
.courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-5);
}

/* ‚îÄ‚îÄ Course card ‚îÄ‚îÄ */
.course-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: box-shadow .22s ease, transform .22s ease, border-color .22s ease;
    display: flex; flex-direction: column;
    position: relative;
}
.course-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-3px);
    border-color: var(--color-border);
}

/* Thumbnail area */
.course-thumb {
    position: relative;
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, #e8f0fb 0%, #f0eeff 100%);
    overflow: hidden;
    flex-shrink: 0;
}
.course-thumb img {
    width: 100%; height: 100%; object-fit: cover;
    transition: transform .3s ease;
}
.course-card:hover .course-thumb img { transform: scale(1.04); }
.course-thumb-placeholder {
    width: 100%; height: 100%;
    display: flex; align-items: center; justify-content: center;
    font-size: 48px;
}

/* Status badge on thumb */
.course-thumb .status-ribbon {
    position: absolute; top: var(--space-3); left: var(--space-3);
    display: inline-flex; align-items: center; gap: 4px;
    padding: 4px 10px; border-radius: var(--radius-full);
    font-size: 11px; font-weight: 600;
    backdrop-filter: blur(8px);
}
.ribbon-pending   { background: rgba(254,249,236,.9); color: var(--color-amber); }
.ribbon-published { background: rgba(234,250,241,.9); color: var(--color-green); }
.ribbon-rejected  { background: rgba(253,236,236,.9); color: var(--color-red);   }

/* Hover action overlay */
.course-thumb-overlay {
    position: absolute; inset: 0;
    background: rgba(0,0,0,.5);
    display: flex; align-items: center; justify-content: center; gap: var(--space-2);
    opacity: 0; transition: opacity .2s ease;
}
.course-card:hover .course-thumb-overlay { opacity: 1; }
.overlay-btn {
    padding: 8px 16px; border-radius: var(--radius-full);
    font-size: var(--text-xs); font-weight: 600;
    text-decoration: none; display: inline-flex; align-items: center; gap: 5px;
    transition: transform .15s ease;
}
.overlay-btn:hover { transform: scale(1.05); opacity: 1; }
.overlay-btn-primary { background: #fff; color: var(--color-blue) !important; }
.overlay-btn-secondary { background: rgba(255,255,255,.2); color: #fff !important; border: 1px solid rgba(255,255,255,.4); }

/* Card body */
.course-card-body {
    padding: var(--space-5); flex: 1; display: flex; flex-direction: column;
}
.course-card-code {
    font-size: 10px; font-weight: 700; text-transform: uppercase;
    letter-spacing: .08em; color: var(--color-blue);
    margin-bottom: var(--space-2);
}
.course-card-title {
