@page
@model OnlineLearningPlatform.RazorPages.Areas.Teacher.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "My Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">My Courses</h2>
        <p class="text-muted mb-0">Manage the courses you created.</p>
    </div>
    <a class="btn btn-primary" asp-area="Teacher" asp-page="/Courses/Create">Create Course</a>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end" style="width: 320px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="courseTableBody">
                    @if (Model.Courses.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No courses yet.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var course in Model.Courses)
                        {
                            <tr>
                                <td>@course.CourseCode</td>
                                <td>@course.Title</td>
                                <td>@course.Price.ToString("N0")</td>
                                <td class="course-status" data-course-id="@course.CourseId">@course.Status</td>
                                <td class="text-end">
                                    <button type="button"
                                            class="btn btn-sm btn-outline-info me-2 btn-course-details"
                                            data-bs-toggle="modal"
                                            data-bs-target="#courseDetailsModal"
                                            data-code="@course.CourseCode"
                                            data-title="@course.Title"
                                            data-status="@course.Status"
                                            data-categoryid="@(course.CategoryId?.ToString() ?? "N/A")"
                                            data-level="@course.Level"
                                            data-price="@course.Price.ToString("N0")"
                                            data-discount="@(course.DiscountPrice?.ToString("N0") ?? "N/A")"
                                            data-language="@course.Language"
                                            data-slug="@course.Slug"
                                            data-thumbnail="@(course.ThumbnailUrl ?? "N/A")"
                                            data-description="@(course.Description ?? "N/A")"
                                            data-createdat="@course.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")">
                                        Details
                                    </button>

                                    <a class="btn btn-sm btn-outline-warning me-2" asp-area="Teacher" asp-page="/Courses/Edit" asp-route-id="@course.CourseId">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-area="Teacher" asp-page="/Courses/Delete" asp-route-id="@course.CourseId">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="courseDetailsModal" tabindex="-1" aria-labelledby="courseDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="courseDetailsModalLabel">Course Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6"><strong>Course Code:</strong> <span id="mCode"></span></div>
                    <div class="col-md-6"><strong>Status:</strong> <span id="mStatus"></span></div>
                    <div class="col-md-6"><strong>Category ID:</strong> <span id="mCategoryId"></span></div>
                    <div class="col-md-6"><strong>Level:</strong> <span id="mLevel"></span></div>
                    <div class="col-md-6"><strong>Price:</strong> <span id="mPrice"></span></div>
                    <div class="col-md-6"><strong>Discount Price:</strong> <span id="mDiscount"></span></div>
                    <div class="col-md-6"><strong>Language:</strong> <span id="mLanguage"></span></div>
                    <div class="col-md-6"><strong>Created At:</strong> <span id="mCreatedAt"></span></div>
                    <div class="col-12"><strong>Title:</strong> <span id="mTitle"></span></div>
                    <div class="col-12"><strong>Slug:</strong> <span id="mSlug"></span></div>
                    <div class="col-12"><strong>Thumbnail URL:</strong> <span id="mThumbnail"></span></div>
                    <div class="col-12">
                        <strong>Description:</strong>
                        <div id="mDescription" class="border rounded p-3 bg-light mt-1"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const buttons = document.querySelectorAll('.btn-course-details');

        buttons.forEach(btn => {
            btn.addEventListener('click', function () {
                document.getElementById('mCode').textContent = this.dataset.code || 'N/A';
                document.getElementById('mTitle').textContent = this.dataset.title || 'N/A';
                document.getElementById('mStatus').textContent = this.dataset.status || 'N/A';
                document.getElementById('mCategoryId').textContent = this.dataset.categoryid || 'N/A';
                document.getElementById('mLevel').textContent = this.dataset.level || 'N/A';
                document.getElementById('mPrice').textContent = this.dataset.price || 'N/A';
                document.getElementById('mDiscount').textContent = this.dataset.discount || 'N/A';
                document.getElementById('mLanguage').textContent = this.dataset.language || 'N/A';
                document.getElementById('mSlug').textContent = this.dataset.slug || 'N/A';
                document.getElementById('mThumbnail').textContent = this.dataset.thumbnail || 'N/A';
                document.getElementById('mDescription').textContent = this.dataset.description || 'N/A';
                document.getElementById('mCreatedAt').textContent = this.dataset.createdat || 'N/A';
            });
        });

        setInterval(function () {
            fetch(window.location.pathname + '?handler=Statuses', { method: 'GET' })
                .then(response => response.ok ? response.json() : null)
                .then(data => {
                    if (!data || !Array.isArray(data)) return;

                    data.forEach(item => {
                        const statusCell = document.querySelector('.course-status[data-course-id="' + item.courseId + '"]');
                        if (statusCell) {
                            statusCell.textContent = item.status;
                        }
                    });
                })
                .catch(() => { });
        }, 5000);
    });
</script>
}
