@page
@model OnlineLearningPlatform.RazorPages.Areas.Teacher.Pages.DashboardModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container mt-4">
    <h3><i class="bi bi-person-workspace text-primary"></i> Quản lý nội dung giảng dạy</h3>
    <hr />
    @foreach (var course in Model.Courses)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white d-flex justify-content-between">
                <span>Khóa học: @course.Title</span>
                <small>ID: @course.CourseId.ToString().Substring(0, 8)</small>
            </div>
            <div class="card-body p-0">
                <div class="accordion accordion-flush" id="acc_@course.CourseId">
                    @foreach (var sec in course.Sections.OrderBy(s => s.OrderIndex))
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#sec_@sec.SectionId">
                                    <strong>Chương: @sec.Title</strong>
                                </button>
                            </h2>
                            <div id="sec_@sec.SectionId" class="accordion-collapse collapse">
                                <div class="accordion-body p-0">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var lesson in sec.Lessons.OrderBy(l => l.OrderIndex))
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <span>@lesson.Title</span>
                                                <div class="btn-group">
                                                    @{
                                                        var q = lesson.Quizzes.FirstOrDefault();
                                                    }
                                                    @if (q != null)
                                                    {
                                                        <a asp-area="" asp-page="/Quiz/ManageQuestions" asp-route-id="@q.QuizId" class="btn btn-sm btn-outline-primary">Quản lý Quiz</a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-area="" asp-page="/Quiz/Create" asp-route-lessonId="@lesson.LessonId" class="btn btn-sm btn-primary">+ Thêm Quiz</a>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>