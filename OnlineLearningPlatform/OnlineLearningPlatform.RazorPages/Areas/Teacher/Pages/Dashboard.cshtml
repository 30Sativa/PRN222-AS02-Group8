@page
@model OnlineLearningPlatform.RazorPages.Areas.Teacher.Pages.DashboardModel
@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="page-header fade-in">
    <h1>📖 Xin chào, @Model.UserInfo?.FullName!</h1>
    <span class="breadcrumb-text">Chào mừng giảng viên! Quản lý khóa học và học viên của bạn tại đây.</span>
</div>

<!-- Stat Cards -->
<div class="stat-grid">
    <div class="stat-card">
        <div class="stat-icon purple">📚</div>
        <div class="stat-info">
            <h3>Khóa học của tôi</h3>
            <!-- TODO: chức năng Course chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon green">👥</div>
        <div class="stat-info">
            <h3>Tổng học viên</h3>
            <!-- TODO: chức năng Enrollment chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon blue">⭐</div>
        <div class="stat-info">
            <h3>Đánh giá TB</h3>
            <!-- TODO: chức năng Review chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon orange">💰</div>
        <div class="stat-info">
            <h3>Thu nhập</h3>
            <!-- TODO: chức năng Payment chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="olp-card fade-in">
    <div class="olp-card-header">
        <h2>⚡ Truy cập nhanh</h2>
    </div>
    <div class="olp-card-body">
        <div class="quick-links">
            <!-- Profile - đã có backend -->
            <a asp-area="Teacher" asp-page="/Profile" class="quick-link-card">
                <div class="link-icon" style="background: #ede9fe; color: #6d28d9;">👤</div>
                <div class="link-title">Hồ sơ giảng viên</div>
                <div class="link-desc">Xem và cập nhật thông tin</div>
            </a>

            <!-- TODO: Chưa có backend -->
            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #cffafe; color: #0e7490;">📖</div>
                <div class="link-title">Khóa học của tôi</div>
                <div class="link-desc">Quản lý nội dung khóa học</div>
            </div>

            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #d1fae5; color: #047857;">➕</div>
                <div class="link-title">Tạo khóa học mới</div>
                <div class="link-desc">Thiết kế và xuất bản khóa học</div>
            </div>

            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #fef3c7; color: #92400e;">📊</div>
                <div class="link-title">Thống kê</div>
                <div class="link-desc">Theo dõi hiệu suất giảng dạy</div>
            </div>
        </div>
    </div>
</div>