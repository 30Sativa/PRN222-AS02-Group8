@page
@model OnlineLearningPlatform.RazorPages.Areas.Admin.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <h2 class="h4 mb-1">Create Category</h2>
                <p class="text-muted mb-4">Add a new category for organizing courses.</p>

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label fw-semibold">Category Name</label>
                        <input asp-for="CategoryName" class="form-control form-control-lg" placeholder="e.g. Frontend Development" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">Create</button>
                        <a asp-area="Admin" asp-page="/Categories/Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
