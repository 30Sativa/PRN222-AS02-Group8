@page "{id:int}"
@model OnlineLearningPlatform.RazorPages.Areas.Admin.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <h2 class="h4 text-danger mb-1">Delete Category</h2>
                <p class="text-muted mb-4">This action cannot be undone.</p>

                @if (Model.Category is null)
                {
                    <div class="alert alert-warning mb-0">Category not found.</div>
                }
                else
                {
                    <div class="alert alert-danger">
                        Are you sure you want to delete <strong>@Model.Category.CategoryName</strong>?
                    </div>

                    <div class="border rounded p-3 mb-4 bg-light-subtle">
                        <div class="mb-2"><strong>ID:</strong> @Model.Category.CategoryId</div>
                        <div><strong>Name:</strong> @Model.Category.CategoryName</div>
                    </div>

                    <form method="post" class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-area="Admin" asp-page="/Categories/Index" class="btn btn-outline-secondary">Cancel</a>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
