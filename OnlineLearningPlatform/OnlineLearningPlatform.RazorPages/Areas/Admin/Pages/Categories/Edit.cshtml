@page "{id:int}"
@model OnlineLearningPlatform.RazorPages.Areas.Admin.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="row justify-content-center">
    <div class="col-lg-7 col-xl-6">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4 p-md-5">
                <h2 class="h4 mb-1">Edit Category</h2>
                <p class="text-muted mb-4">Update category information.</p>

                <form method="post">
                    <input type="hidden" asp-for="CategoryId" />

                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label fw-semibold">Category Name</label>
                        <input asp-for="CategoryName" class="form-control form-control-lg" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        <a asp-area="Admin" asp-page="/Categories/Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
