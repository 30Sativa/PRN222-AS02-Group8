@page
@model OnlineLearningPlatform.RazorPages.Areas.Admin.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Course Review";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Course Review</h2>
        <p class="text-muted mb-0">Review submitted courses from teachers.</p>
    </div>
    <a class="btn btn-outline-secondary" asp-area="Admin" asp-page="/Dashboard">Back to Dashboard</a>
</div>

@if (TempData["SuccessMessage"] is string successMessage)
{
    <div class="alert alert-success">@successMessage</div>
}

@if (TempData["ErrorMessage"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-5">
                <label asp-for="SearchTitle" class="form-label">Search by Title</label>
                <input asp-for="SearchTitle" class="form-control" placeholder="Enter course title" />
            </div>
            <div class="col-md-5">
                <label asp-for="SearchTeacherName" class="form-label">Search by Teacher Name</label>
                <input asp-for="SearchTeacherName" class="form-control" placeholder="Enter teacher name" />
            </div>
            <div class="col-md-2 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
                <a asp-page="/Courses/Index" asp-area="Admin" class="btn btn-outline-secondary w-100">Clear</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Title</th>
                        <th>Teacher Name</th>
                        <th>Status</th>
                        <th class="text-end" style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Courses.Count == 0)
                    {
                        <tr id="empty-courses-row">
                            <td colspan="5" class="text-center text-muted py-4">No courses found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var course in Model.Courses)
                        {
                            <tr id="admin-course-row-@course.CourseId">
                                <td>@course.CourseCode</td>
                                <td>@course.Title</td>
                                <td>@(course.Teacher?.FullName ?? "N/A")</td>
                                <td id="admin-course-status-@course.CourseId">@course.Status</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-page="/Courses/Details" asp-route-id="@course.CourseId">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/lib/microsoft-signalr/signalr.min.js"></script>
<script>
(function () {
    // ==== SignalR: Admin Courses realtime ====
    const connection = new signalR.HubConnectionBuilder()
        .withUrl('/hubs/data')
        .withAutomaticReconnect()
        .build();

    function escHtml(str) {
        return String(str || '').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
    }

    function showToast(msg, type) {
        const toast = document.createElement('div');
        toast.className = 'alert alert-' + (type || 'info');
        toast.style.cssText = 'position:fixed;bottom:20px;right:20px;z-index:9999;min-width:300px;animation:fadeIn .3s ease;max-width:420px;';
        toast.innerHTML = msg;
        document.body.appendChild(toast);
        setTimeout(() => { toast.style.opacity = '0'; toast.style.transition = 'opacity .3s'; setTimeout(() => toast.remove(), 300); }, 4500);
    }

    // Khi Teacher t·∫°o kh√≥a h·ªçc m·ªõi ‚Üí th√™m row v√†o b·∫£ng c·ªßa Admin ngay
    connection.on('CourseCreated', function (data) {
        const tbody = document.querySelector('table tbody');
        if (!tbody) return;
        // X√≥a empty row n·∫øu c√≥
        const emptyRow = document.getElementById('empty-courses-row');
        if (emptyRow) emptyRow.remove();

        // Tr√°nh duplicate
        if (document.getElementById('admin-course-row-' + data.courseId)) return;

        const tr = document.createElement('tr');
        tr.id = 'admin-course-row-' + data.courseId;
        tr.style.animation = 'fadeIn .4s ease';
        tr.innerHTML = `
            <td>${escHtml(data.courseCode || '')}</td>
            <td>${escHtml(data.title || '')}</td>
            <td>${escHtml(data.teacherName || '')}</td>
            <td id="admin-course-status-${data.courseId}">Pending</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary" href="/Admin/Courses/Details?id=${data.courseId}">Details</a>
            </td>`;
        tbody.insertBefore(tr, tbody.firstChild);
        showToast('üìö Kh√≥a h·ªçc m·ªõi: <strong>' + escHtml(data.title) + '</strong> ƒëang ch·ªù duy·ªát.', 'info');
    });

    // Khi Admin approve/reject ‚Üí c·∫≠p nh·∫≠t status cell ngay
    connection.on('CourseStatusChanged', function (data) {
        const statusCell = document.getElementById('admin-course-status-' + data.courseId);
        if (!statusCell) return;
        statusCell.textContent = data.status;

        const row = document.getElementById('admin-course-row-' + data.courseId);
        if (row) {
            row.style.transition = 'background .4s ease';
            row.style.background = data.status === 'Published' ? 'rgba(52,199,89,.08)' : 'rgba(255,59,48,.06)';
            setTimeout(() => { row.style.background = ''; }, 1500);
        }
    });

    // Khi Teacher x√≥a kh√≥a h·ªçc ‚Üí x√≥a row kh·ªèi b·∫£ng
    connection.on('CourseDeleted', function (data) {
        const row = document.getElementById('admin-course-row-' + data.courseId);
        if (!row) return;
        row.style.transition = 'opacity .35s ease';
        row.style.opacity = '0';
        setTimeout(() => row.remove(), 350);
        showToast('üóëÔ∏è M·ªôt kh√≥a h·ªçc ƒë√£ b·ªã x√≥a.', 'warning');
    });

    connection.start().catch(err => console.warn('[SignalR DataHub] Admin Courses connect error:', err));
})();
</script>
}

