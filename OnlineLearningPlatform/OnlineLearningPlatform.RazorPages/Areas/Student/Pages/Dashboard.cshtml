@page
@model OnlineLearningPlatform.RazorPages.Areas.Student.Pages.DashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="page-header fade-in">
    <h1>🎓 Xin chào, @Model.UserInfo?.FullName!</h1>
    <span class="breadcrumb-text">Chào mừng bạn đến với EduLearn. Bắt đầu hành trình học tập của mình!</span>
</div>

<!-- Stat Cards -->
<div class="stat-grid">
    <div class="stat-card">
        <div class="stat-icon purple">📚</div>
        <div class="stat-info">
            <h3>Khóa học đã đăng ký</h3>
            <!-- TODO: chức năng Enrollment chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon green">✅</div>
        <div class="stat-info">
            <h3>Đã hoàn thành</h3>
            <!-- TODO: chức năng Progress chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon blue">⏱️</div>
        <div class="stat-info">
            <h3>Đang học</h3>
            <!-- TODO: chức năng Progress chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-icon orange">🏆</div>
        <div class="stat-info">
            <h3>Chứng chỉ</h3>
            <!-- TODO: chức năng Certificate chưa có -->
            <div class="stat-value">—</div>
        </div>
    </div>
</div>

<!-- Quick Links -->
<div class="olp-card fade-in">
    <div class="olp-card-header">
        <h2>⚡ Truy cập nhanh</h2>
    </div>
    <div class="olp-card-body">
        <div class="quick-links">
            <!-- Profile - đã có backend -->
            <a asp-area="Student" asp-page="/Profile" class="quick-link-card">
                <div class="link-icon" style="background: #ede9fe; color: #6d28d9;">👤</div>
                <div class="link-title">Hồ sơ cá nhân</div>
                <div class="link-desc">Xem và chỉnh sửa thông tin</div>
            </a>

            <!-- TODO: Chưa có backend -->
            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #cffafe; color: #0e7490;">📖</div>
                <div class="link-title">Khóa học của tôi</div>
                <div class="link-desc">Xem các khóa đã đăng ký</div>
            </div>

            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #d1fae5; color: #047857;">🔍</div>
                <div class="link-title">Khám phá khóa học</div>
                <div class="link-desc">Tìm khóa học phù hợp</div>
            </div>

            <div class="quick-link-card disabled-link">
                <span class="coming-soon-badge">Sắp có</span>
                <div class="link-icon" style="background: #fef3c7; color: #92400e;">🏆</div>
                <div class="link-title">Chứng chỉ</div>
                <div class="link-desc">Xem chứng chỉ đã đạt</div>
            </div>
        </div>
    </div>
</div>