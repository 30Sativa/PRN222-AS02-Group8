@page
@model OnlineLearningPlatform.RazorPages.Areas.Student.Pages.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ";
}

<div class="page-head fade-up">
    <h1>Hồ sơ cá nhân</h1>
    <div class="breadcrumb">
        <a asp-area="Student" asp-page="/Dashboard">Dashboard</a>
        <span class="breadcrumb-sep">/</span>
        <span>Hồ sơ</span>
    </div>
</div>

@if (Model.UserInfo == null)
{
    <div class="alert alert-warning fade-up">Không thể tải thông tin hồ sơ.</div>
}
else
{
    <div class="profile-banner fade-up">
        <div class="profile-av-lg u-avatar-student">
            @(Model.UserInfo.FullName?[0].ToString().ToUpper() ?? "S")
        </div>
        <div class="profile-meta">
            <h2>@Model.UserInfo.FullName</h2>
            <div class="profile-role-label">
                <span class="role-pill role-student">Học viên</span>
                &nbsp; Tham gia @Model.UserInfo.CreatedAt.ToString("MM/yyyy")
            </div>
        </div>
        <div style="margin-left:auto;">
            <a asp-area="Student" asp-page="/EditProfile" class="btn btn-primary">Chỉnh sửa</a>
        </div>
    </div>

    <div class="card fade-up">
        <div class="card-header"><h2>Thông tin cá nhân</h2></div>
        <div class="card-body">
            <div class="detail-list">
                <div class="detail-row">
                    <div class="dr-label">Email</div>
                    <div class="dr-value">@Model.UserInfo.Email</div>
                </div>
                <div class="detail-row">
                    <div class="dr-label">Số điện thoại</div>
                    <div class="dr-value">@(Model.UserInfo.PhoneNumber ?? "Chưa cập nhật")</div>
                </div>
                <div class="detail-row">
                    <div class="dr-label">Ngày tham gia</div>
                    <div class="dr-value">@Model.UserInfo.CreatedAt.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="detail-row">
                    <div class="dr-label">Role</div>
                    <div class="dr-value"><span class="role-pill role-student">Học viên</span></div>
                </div>
                <div class="detail-row" style="grid-column: 1 / -1;">
                    <div class="dr-label">Giới thiệu</div>
                    <div class="dr-value">@(string.IsNullOrEmpty(Model.UserInfo.Bio) ? "Chưa có thông tin giới thiệu." : Model.UserInfo.Bio)</div>
                </div>
            </div>
        </div>
    </div>
}
